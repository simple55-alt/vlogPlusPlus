<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".VDRemark_Adapter">
    <RelativeLayout
        android:id="@+id/observer"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="5dp">
        <ImageView
            android:id="@+id/observerheadp"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true">

        </ImageView>
        <TextView
            android:id="@+id/observername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="周杰伦"
            android:layout_toRightOf="@+id/observerheadp"
            android:layout_alignParentTop="true">

        </TextView>
        <TextView
            android:id="@+id/comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="哎哟不错哦！"
            android:textStyle="bold"
            android:layout_below="@+id/observername"
            android:layout_toRightOf="@+id/observerheadp"
            android:layout_marginLeft="0dp">

        </TextView>
        <TextView
            android:id="@+id/commenttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="五分钟前"
            android:layout_alignLeft="@+id/observername"
            android:layout_alignBottom="@+id/observerheadp">

        </TextView>
        <TextView
            android:id="@+id/reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="回复"
            android:layout_alignTop="@+id/commenttime"
            android:layout_toRightOf="@+id/commenttime"
            android:layout_marginLeft="5dp">
        </TextView>
    </RelativeLayout>
</LinearLayout>