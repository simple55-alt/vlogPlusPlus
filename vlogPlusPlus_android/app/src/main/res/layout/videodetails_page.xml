<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VideoDetails_page">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/backbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitXY"
            android:tint="@color/colorGrey"
            android:background="@color/backgroundlucency"
            android:src="@mipmap/back">

        </ImageButton>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/videod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/uploader"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp">
            <com.vlogplusplus.CircleImageView
                android:id="@+id/headp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/head_example">

            </com.vlogplusplus.CircleImageView>
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/upload_name"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/headp"
                android:layout_marginLeft="0dp">

            </TextView>
            <TextView
                android:id="@+id/uploadtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/upload_time"
                android:layout_alignLeft="@+id/name"
                android:layout_alignBottom="@+id/headp">

            </TextView>
            <ImageButton
                android:id="@+id/transmitbutton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitXY"
                android:tint="@color/colorGrey"
                android:layout_centerVertical="true"
                android:background="@color/backgroundlucency"
                android:src="@mipmap/transmit"
                android:layout_alignParentRight="true">

            </ImageButton>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/videotitle"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginLeft="5dp"
                android:text="@string/titleofvideo">

            </TextView>
            <VideoView
                android:id="@+id/videoplay"
                android:layout_width="match_parent"
                android:layout_height="300dp">

            </VideoView>
            </LinearLayout>
        </LinearLayout>
    <RelativeLayout
        android:id="@+id/commentssection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/remartitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPink"
            android:text="热评论"
            android:textColor="@color/colorWhite">
        </TextView>
        <RelativeLayout
            android:id="@+id/remark"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_below="@+id/remartitle"
            android:layout_above="@+id/my_remark">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true">
<!--                android:layout_above="@id/moreremark"-->

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/remarker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </androidx.recyclerview.widget.RecyclerView>
            </RelativeLayout>
<!--            <RelativeLayout-->
<!--                android:id="@+id/moreremark"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_centerHorizontal="true"-->
<!--                android:layout_alignParentBottom="true"-->
<!--                >-->
<!--                <TextView-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="20dp"-->
<!--                    android:text="查看更多评论"></TextView>-->
<!--            </RelativeLayout>-->
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/my_remark"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:layout_alignParentBottom="true"
            >
            <EditText
                android:id="@+id/comment_my"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:hint="说点什么吧"
                android:paddingLeft="5dp"
                android:layout_toLeftOf="@+id/expression"
                android:background="@color/backgroundlucency"
                >
            </EditText>
            <ImageButton
                android:id="@+id/expression"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:tint="@color/colorGrey"
                android:background="@color/backgroundlucency"
                android:src="@mipmap/signin1"
                ></ImageButton>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>