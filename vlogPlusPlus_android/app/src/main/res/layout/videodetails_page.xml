<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VideoDetails_page">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/backbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <ImageButton
                android:id="@+id/back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitXY"
                android:tint="@color/colorGrey"
                android:background="@color/backgroundlucency"
                android:src="@mipmap/back">
            </ImageButton>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/videod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/uploader"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp">
                <com.vlogplusplus.CircleImageView
                    android:id="@+id/headp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentLeft="true"
                    android:scaleType="centerCrop"
                    android:background="@drawable/head_border1"
                    android:src="@mipmap/head_example2">
                </com.vlogplusplus.CircleImageView>
                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/upload_name"
                    android:textSize="23sp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/headp"
                    android:layout_marginLeft="10dp">
                </TextView>
                <TextView
                    android:id="@+id/uploadtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/upload_time"
                    android:layout_alignLeft="@+id/name"
                    android:layout_alignBottom="@+id/headp">
                </TextView>
                <ImageButton
                    android:id="@+id/transmitbutton"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="fitXY"
                    android:tint="@color/colorPink"
                    android:layout_centerVertical="true"
                    android:background="@color/backgroundlucency"
                    android:src="@mipmap/transmit"
                    android:layout_alignParentRight="true">
                </ImageButton>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:paddingRight="5dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/videotitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:layout_marginLeft="5dp"
                    android:text="@string/titleofvideo">
                </TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="280dp">
                    <RelativeLayout
                        android:id="@+id/videoview_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp">
                        <VideoView
                            android:id="@+id/videoView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/srt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="52dp"
                            android:gravity="center"
                            android:padding="5dp"
                            android:textColor="#ffffff"
                            android:textSize="16sp" />
                        <include
                            android:id="@+id/media_controller"
                            layout="@layout/player_videoview_controller"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone" />
                        <LinearLayout
                            android:id="@+id/buffering_indicator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:orientation="vertical">
                            <ProgressBar
                                android:id="@+id/buffering_progress"
                                style="@android:style/Widget.ProgressBar.Large"
                                android:layout_width="40dip"
                                android:layout_height="40dip"
                                android:visibility="gone" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/commentssection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/remartitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPink"
                android:text="热评论"
                android:textColor="@color/colorWhite">
            </TextView>
            <RelativeLayout
                android:id="@+id/remark"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_below="@+id/remartitle"
                android:layout_above="@+id/my_remark">
                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/remarker"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </androidx.recyclerview.widget.RecyclerView>
                        <TextView
                            android:id="@+id/more_remark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="查看更多评论"
                            android:layout_gravity="center">
                        </TextView>
                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/my_remark"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:layout_alignParentBottom="true">
                <EditText
                    android:id="@+id/comment_my"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:hint="说点什么吧"
                    android:paddingLeft="5dp"
                    android:layout_toLeftOf="@+id/expression"
                    android:background="@color/backgroundlucency">
                </EditText>
                <ImageButton
                    android:id="@+id/expression"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:tint="@color/colorGrey"
                    android:background="@color/backgroundlucency"
                    android:src="@mipmap/signin1"
                    ></ImageButton>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>